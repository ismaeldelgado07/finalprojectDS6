<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_db_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver DB login" />

        <Button
            android:id="@+id/btn_preguntas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver DB preguntas" />

        <Button
            android:id="@+id/btn_ver_respuestas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Respuestas" />

        <Button
            android:id="@+id/btn_agregar_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Informacion" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>